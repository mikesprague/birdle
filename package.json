{
  "name": "birdle",
  "version": "1.13.40",
  "description": "birdle",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf ./dist",
    "dev": "vite serve --port 3000",
    "start": "cross-env NODE_ENV=development npm run dev",
    "prebuild": "npm run clean",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "repository": {
    "url": "https://github.com/mikesprague/birdle"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "engines": {
    "node": ">= 16.x",
    "npm": ">= 8.x"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/birdle/issues"
  },
  "homepage": "https://birdle.app",
  "dependencies": {
    "@sweetalert2/theme-dark": "5.0.15",
    "clipboard": "2.0.11",
    "common-tags": "1.8.2",
    "cross-env": "7.0.3",
    "dayjs": "1.11.7",
    "keyboardjs": "2.7.0",
    "sweetalert2": "11.7.5"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.21.8",
    "@babel/eslint-plugin": "7.19.1",
    "@babel/preset-env": "7.22.1",
    "@fullhuman/postcss-purgecss": "5.0.0",
    "autoprefixer": "10.4.14",
    "charts.css": "1.0.0",
    "cssnano": "6.0.1",
    "cz-git": "^1.6.1",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-stylelint": "18.0.0",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-compat": "4.1.4",
    "eslint-plugin-html": "7.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "postcss": "8.4.24",
    "postcss-cli": "10.1.0",
    "prettier": "2.8.8",
    "prettier-eslint": "15.0.1",
    "sass": "1.62.1",
    "stylelint": "15.6.2",
    "stylelint-config-standard": "33.0.0",
    "stylelint-config-standard-scss": "9.0.0",
    "stylelint-prettier": "3.0.0",
    "tailwindcss": "3.3.2",
    "vite": "4.3.9",
    "vite-plugin-html": "3.2.0",
    "vite-plugin-pwa": "0.15.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": {
    "development": [
      "last 1 version"
    ],
    "production": [
      "> 1%",
      "last 2 versions",
      "not ie <= 10"
    ]
  },
  "eslintConfig": {
    "settings": {
      "jest": {
        "version": 28
      }
    },
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "stylelint"
    ],
    "plugins": [
      "babel",
      "compat",
      "html",
      "import",
      "prettier"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "ecmaVersion": 11,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      }
    },
    "rules": {
      "node/no-unpublished-import": "warn",
      "node/no-missing-import": "warn"
    },
    "ignorePatterns": [
      "dist/",
      ".history/",
      "node_modules/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "tabWidth": 2
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  }
}
