{
  "name": "birdle",
  "version": "1.12.3",
  "description": "birdle",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf ./dist",
    "dev": "vite serve --port $PORT",
    "start": "cross-env NODE_ENV=development vercel dev",
    "get-ver": "cross-env APP_VERSION=$(echo $npm_package_version)",
    "play": "npm show . version",
    "prebuild": "npm run clean",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "repository": {
    "url": "https://github.com/mikesprague/birdle"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "engines": {
    "node": ">= 16.x",
    "npm": ">= 8.x"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/birdle/issues"
  },
  "homepage": "https://birdle.app",
  "dependencies": {
    "@sweetalert2/theme-dark": "5.0.11",
    "clipboard": "2.0.11",
    "common-tags": "1.8.2",
    "cross-env": "7.0.3",
    "dayjs": "1.11.5",
    "keyboardjs": "2.6.4",
    "sweetalert2": "11.4.26"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.18.9",
    "@babel/eslint-plugin": "7.18.10",
    "@babel/preset-env": "7.18.10",
    "@fullhuman/postcss-purgecss": "4.1.3",
    "autoprefixer": "10.4.8",
    "charts.css": "0.9.0",
    "cssnano": "5.1.13",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-stylelint": "15.1.0",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-compat": "4.0.2",
    "eslint-plugin-html": "7.1.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "postcss": "8.4.16",
    "postcss-cli": "10.0.0",
    "prettier": "2.7.1",
    "prettier-eslint": "15.0.1",
    "sass": "1.54.4",
    "stylelint": "14.10.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard": "27.0.0",
    "stylelint-config-standard-scss": "5.0.0",
    "stylelint-prettier": "2.0.0",
    "tailwindcss": "3.1.8",
    "vercel": "28.0.1",
    "vite": "3.0.7",
    "vite-plugin-html": "3.2.0",
    "vite-plugin-pwa": "0.12.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": {
    "development": [
      "last 1 version"
    ],
    "production": [
      "> 1%",
      "last 2 versions",
      "not ie <= 10"
    ]
  },
  "eslintConfig": {
    "settings": {
      "jest": {
        "version": 28
      }
    },
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "stylelint"
    ],
    "plugins": [
      "babel",
      "compat",
      "html",
      "import",
      "prettier"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "ecmaVersion": 11,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      }
    },
    "rules": {
      "node/no-unpublished-import": "warn"
    },
    "ignorePatterns": [
      "dist/",
      ".history/",
      "node_modules/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "tabWidth": 2
  }
}
